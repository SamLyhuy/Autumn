<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Your existing app theme styles might be here -->

    <!-- Chat bubble text style for user messages -->
    <style name="ChatBubble.User">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Chat bubble text style for bot messages -->
    <style name="ChatBubble.Bot">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ChatBubble">StyleUser</style>

    <style name="Autumn">StyleTextEdit</style>
    <style name="Autumn.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/autumn_primary_text</item>
        <item name="android:textColorHint">@color/autumn_hint_text</item>
    </style>



</resources>
