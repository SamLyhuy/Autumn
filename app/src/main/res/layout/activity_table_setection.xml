<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:padding="16dp"
    android:id="@+id/tableForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Booking a Table"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Stage Label -->
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="57dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"
            android:background="@color/light_gray"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stage"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="5"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center"
            >

            <View
                android:id="@+id/table_A1"
                android:layout_width="77dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/four_seat_available" />

            <View
                android:layout_width="35dp"
                android:layout_height="10dp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="3"
                >

                <View
                    android:id="@+id/table_B1"
                    android:layout_width="77dp"
                    android:layout_height="24dp"
                    android:background="@drawable/two_seat_available" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    />
                <View
                    android:id="@+id/table_B2"
                    android:layout_width="77dp"
                    android:layout_height="24dp"
                    android:background="@drawable/two_seat_available" />
                <View
                    android:id="@+id/table_B3"
                    android:layout_width="77dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/two_seat_available" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    />
                <View
                    android:id="@+id/table_B4"
                    android:layout_width="77dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/two_seat_available" />
            </GridLayout>

            <View
                android:layout_width="35dp"
                android:layout_height="10dp" />

            <View
                android:id="@+id/table_A2"
                android:layout_width="77dp"
                android:layout_height="48dp"
                android:background="@drawable/four_seat_available"
                android:layout_gravity="center_vertical"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:rowCount="4"
            android:columnCount="5"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center"
            >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2">

                <View
                    android:id="@+id/table_A3"
                    android:layout_width="77dp"
                    android:layout_height="48dp"
                    android:background="@drawable/four_seat_available" />

                <View
                    android:layout_width="35dp"
                    android:layout_height="10dp" />

                <View
                    android:id="@+id/table_A4"
                    android:layout_width="77dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/four_seat_available" />

            </GridLayout>



            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="3"
                >

                <View
                    android:id="@+id/table_B5"
                    android:layout_width="77dp"
                    android:layout_height="24dp"
                    android:background="@drawable/two_seat_available" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    />
                <View
                    android:id="@+id/table_B6"
                    android:layout_width="77dp"
                    android:layout_height="24dp"
                    android:background="@drawable/two_seat_available" />
                <View
                    android:id="@+id/table_C1"
                    android:layout_width="77dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/six_seat_available" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    />
                <View
                    android:id="@+id/table_C2"
                    android:layout_width="77dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/six_seat_available" />
            </GridLayout>

            <View
                android:layout_width="35dp"
                android:layout_height="10dp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="5">

                <View
                    android:id="@+id/table_A5"
                    android:layout_width="77dp"
                    android:layout_height="48dp"
                    android:background="@drawable/four_seat_available" />

                <View
                    android:id="@+id/table_A6"
                    android:layout_width="77dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/four_seat_available" />

            </GridLayout>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:rowCount="4"
            android:columnCount="5"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center"
            >

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_gravity="center">

                <View
                    android:id="@+id/table_B7"
                    android:layout_width="77dp"
                    android:layout_height="24dp"
                    android:background="@drawable/two_seat_available" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="10dp" />

                <View
                    android:id="@+id/table_B8"
                    android:layout_width="77dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/two_seat_available" />

            </GridLayout>



            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="3"
                >

                <View
                    android:id="@+id/table_D1"
                    android:layout_width="96dp"
                    android:layout_height="77dp"
                    android:background="@drawable/eight_seat_available" />
                <View
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    />
                <View
                    android:id="@+id/table_D2"
                    android:layout_width="96dp"
                    android:layout_height="77dp"
                    android:background="@drawable/eight_seat_available" />
            </GridLayout>

            <View
                android:layout_width="15dp"
                android:layout_height="10dp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="1"
                android:layout_gravity="center">

                <View
                    android:id="@+id/table_B9"
                    android:layout_width="77dp"
                    android:layout_height="24dp"
                    android:background="@drawable/two_seat_available" />


                <View
                    android:id="@+id/table_B10"
                    android:layout_width="77dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/two_seat_available" />

            </GridLayout>
        </GridLayout>


        <!-- Legend -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_available"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/available"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_marginEnd="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_unavailable"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unavailable"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    android:layout_marginEnd="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_selected"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="12dp"
                    />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Date"
            android:background="@drawable/circle_gray"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/black" />


        <!-- Confirm Button -->
        <Button
            android:id="@+id/btnSubmitBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/error_red"
            android:text="Confirm"
            android:textColor="@color/white"
            android:drawableStart="@drawable/card_background"
            android:visibility="visible"/>

    </LinearLayout>

</FrameLayout>
